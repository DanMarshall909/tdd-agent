# EditorConfig for IntelliJ code formatting
root = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

# Kotlin specifics
ij_kotlin_allow_trailing_comma = false
ij_kotlin_packages_to_use_import_on_demand = java.util.*,kotlin.io.Kotlin.,kotlin.jvm.Kotlin.,kotlinx.android.synthetic.main.*
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^
